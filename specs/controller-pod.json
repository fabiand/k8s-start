{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "controller",
    "labels":
      {
        "app": "controller"
      }
  },
  "spec": {
    "containers": [
      {
        "name": "controller",
        "image": "docker.io/fabiand/controller:latest",
        "imagePullPolicy": "Always",
        "ports": [
          {
            "containerPort": 8084,
            "name": "controller-rest"
          }
        ]
      },
      {
        "name": "kubectl",
        "image": "gcr.io/google_containers/kubectl:v0.18.0-120-gaeb4ac55ad12b1-dirty",
        "imagePullPolicy": "Always",
        "args": [
          "proxy",
          "-p",
          "8001"
        ]
      },
      {
        "name": "etcd",
        "image": "gcr.io/google_containers/etcd:2.0.12",
        "imagePullPolicy": "Always",
        "ports": [
          {
            "containerPort": 4001,
            "name": "etcd-rest"
          }
        ],
	      "command": [
          "/usr/local/bin/etcd",
          "--addr=127.0.0.1:4001",
          "--bind-addr=0.0.0.0:4001",
          "--data-dir=/var/etcd/data"
        ],
        "volumeMounts": [
          {
            "name": "etcddata",
            "mountPath": "/var/etcd/data"
          },
          {
            "name": "host",
            "mountPath": "/host"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "etcddata",
        "emptyDir": {}
      },
      {
        "name": "host",
        "hostPath":
          {
            "path": "/"
          }
      }
    ]
  }
}

