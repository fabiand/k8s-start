{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "ovirt-controller",
    "labels":
      {
        "app": "ovirt-controller"
      }
  },
  "spec": {
    "containers": [
      {
        "name": "ovirt-controller",
        "image": "docker.io/fabiand/controller:latest",
        "imagePullPolicy": "Always",
        "ports": [
          {
            "containerPort": 8080,
            "name": "controller-rest"
          }
        ],
        "env": [
          {
            "name": "FOO",
            "value": "BAR"
          },
          {
            "name": "POD_IP",
            "valueFrom": {
              "fieldRef": {
                "fieldPath": "status.podIP"
              }
            }
          }
        ]
      },
      {
        "name": "kubectl",
        "image": "gcr.io/google_containers/kubectl:v0.18.0-120-gaeb4ac55ad12b1-dirty",
        "imagePullPolicy": "Always",
        "args": [
          "proxy",
          "-p",
          "8001"
        ]
      },
      {
        "name": "etcd",
        "image": "gcr.io/google_containers/etcd:2.0.12"
        "imagePullPolicy": "Always",
	"entrypoint": [
          "/usr/local/bin/etcd",
          "--addr=127.0.0.1:4001",
          "--bind-addr=0.0.0.0:4001",
          "--data-dir=/var/etcd/data"
        ],
        "volumes": [
          {
            "name": "etcddata",
            "mountPath": "/var/etcd/data"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "etcddata",
        "emptyDir": {}
      }
    ]
  }
}

